{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "singularName": "location",
    "pluralName": "locations",
    "displayName": "Location"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "description": {
      "type": "text"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "website": {
      "type": "string"
    },
    "openingHours": {
      "type": "string"
    },
    "contactDetails": {
      "type": "string"
    },
    "locationOverview": {
      "type": "text"
    },
    "capacity": {
      "type": "integer"
    },
    "size": {
      "type": "string"
    },
    "locationStatus": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive",
        "maintenance",
        "closed"
      ]
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "location"
    },
    "accessibilityFeatures": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::accessibility-feature.accessibility-feature",
      "inversedBy": "locations"
    }
  }
}
